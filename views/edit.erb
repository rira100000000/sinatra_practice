<form method="post" action="/memos/<%= @memo['id'] %>">
  <label for="title">タイトル</label><br>
  <input type="text" id="title" name="title" value="<%= @memo['title'] %>"><br>
  <label for="content">本文</label><br>
  <textarea type="text" id="content" name="content"><%= @memo['content'] %></textarea><br>
  <input type="submit" value="変更" class="button">
  <input type="hidden" id="id" name="id" value="<%= @memo['id'] %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
</form>
